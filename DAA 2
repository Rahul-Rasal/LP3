#include <iostream>
#include <algorithm>
using namespace std;

struct Job {
    char id;
    int deadline;
    int profit;
};

// sort by profit (high â†’ low)
bool cmp(Job a, Job b) {
    return a.profit > b.profit;
}

int main() {

    // Hardcoded jobs: {ID, Deadline, Profit}
    Job jobs[] = {
        {'A', 2, 100},
        {'B', 1, 19},
        {'C', 2, 27},
        {'D', 1, 25},
        {'E', 3, 15}
    };

    int n = 5; // number of jobs

    sort(jobs, jobs + n, cmp);

    int maxD = 0;
    for (int i = 0; i < n; i++)
        maxD = max(maxD, jobs[i].deadline);

    char slot[maxD + 1];
    for (int i = 1; i <= maxD; i++) slot[i] = '-';

    int totalProfit = 0;

    for (int i = 0; i < n; i++) {
        for (int t = jobs[i].deadline; t >= 1; t--) {
            if (slot[t] == '-') {
                slot[t] = jobs[i].id;
                totalProfit += jobs[i].profit;
                break;
            }
        }
    }

    cout << "Jobs: ";
    for (int i = 1; i <= maxD; i++)
        if (slot[i] != '-') cout << slot[i] << " ";

    cout << "\nProfit: " << totalProfit;
}
