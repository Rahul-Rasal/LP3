#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int a = 0, b = 1, c;
    int step = 0;          // counts operations

    if (n == 0) {
        cout << 0 << endl;
        cout << "Steps: " << 1;
        return 0;
    }
    if (n == 1) {
        cout << 1 << endl;
        cout << "Steps: " << 1;
        return 0;
    }

    for (int i = 2; i <= n; i++) {
        c = a + b; step++;
        a = b;     step++;
        b = c;     step++;
    }

    cout << b << endl;
    cout << "Steps: " << step;

    return 0;
}
